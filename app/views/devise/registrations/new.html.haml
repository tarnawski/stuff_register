%h2 Rejestracja
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true
    = f.input :password, label: "Hasło", required: true
    = f.input :password_confirmation, label: "Powtórz hasło", required: true
  .form-actions
    = f.button :submit, "Zarejestruj się"
= render "devise/shared/links"
