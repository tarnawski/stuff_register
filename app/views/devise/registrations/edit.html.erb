<h2>Edytowanie <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

<div class="form-inputs">

    <%= f.input :firstname, label: "Imię", required: true, autofocus: true %>




    <%= f.input :lastname, label: "Nazwisko", required: true, autofocus: true %>



    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: "Hasło", autocomplete: "off", hint: "Pozostaww puste jeśli nie chcesz zmieniać hasła.", required: false %>
    <%= f.input :password_confirmation, label: "Powtórz hasło", required: false %>
    <%= f.input :current_password, hint: "Podaj hasło aby potwierdzić zmiany", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Aktualizuj" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Zamknij moje konto", registration_path(resource_name), data: { confirm: "Jesteś pewien?" }, method: :delete %></p>

<%= link_to "Powrót", :back %>
