%h2 Logowanie
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, required: false, autofocus: true
    = f.input :password, label: "Hasło", required: false
    = f.input :remember_me, label: "Zapamiętaj mnie", as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "Zaloguj się"
= render "devise/shared/links"
