%h1 Lista Pokoi

%table.table
  %tr
    %th Nazwa
    %th
    %th
    %th

  - @rooms.each do |room|
    %tr
      %td= room.name
      %td= link_to '', room, class: %w(glyphicon glyphicon-search)
      %td= link_to '', edit_room_path(room), class: %w(glyphicon glyphicon-pencil)
      %td= link_to '', room, class: %w(glyphicon glyphicon-remove), :method => :delete, :data => { :confirm => 'Czy napewno chcesz usunać tą salę?' }

%br

= link_to ' Nowa sala', new_room_path, class: %w(glyphicon glyphicon-plus)
